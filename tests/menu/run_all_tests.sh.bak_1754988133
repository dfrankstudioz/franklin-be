#!/usr/bin/env bash
set -Eeuo pipefail

ROOT="$HOME/docker"
MENU_DIR="$ROOT/tests/menu"
LOG_DIR="$ROOT/logs"
mkdir -p "$LOG_DIR"
TS="$(date +%Y%m%d_%H%M%S)"
LOGFILE="$LOG_DIR/run_all_${TS}.log"

# Mirror stdout/stderr to a combined logfile
exec > >(tee -a "$LOGFILE") 2>&1

SCRIPTS=(
  "api_tests.sh"
  "rag_tests.sh"
  "web_ui_tests.sh"
  "routing_tests.sh"
  "env_config_tests.sh"
  "docker_health_tests.sh"
  "logs_snapshot.sh"
  "plugins_tests.sh"
)

total=${#SCRIPTS[@]}
ok=0 fail=0

# pretty helpers
human() { local s=$1; printf "%02d:%02d:%02d" "$((s/3600))" "$(((s%3600)/60))" "$((s%60))"; }
bar() {
  local current=$1 total=$2 width=28
  local done=$(( current * width / total ))
  local left=$(( width - done ))
  printf "[%s%s] %d/%d" "$(printf '%*s' "$done" '' | tr ' ' '#')" "$(printf '%*s' "$left" '' | tr ' ' '-')" "$current" "$total"
}

echo "Run ALL started at $(date '+%F %T')  → logging to $LOGFILE"
suite_start=$(date +%s)

for i in "${!SCRIPTS[@]}"; do
  s="${SCRIPTS[$i]}"
  idx=$((i+1))
  echo
  echo "=== Running $s ($(bar "$i" "$total")) ==="

  start=$(date +%s)
  # run in background so we can show a spinner + elapsed
  bash "$MENU_DIR/$s" &
  pid=$!

  frames='-\|/'; fi=0
  while kill -0 "$pid" 2>/dev/null; do
    elapsed=$(( $(date +%s) - start ))
    frame=${frames:fi%${#frames}:1}
    printf "\r  %s  elapsed %s" "$frame" "$(human "$elapsed")"
    sleep 0.2
    ((fi++))
  done
  wait "$pid" || status=$? || true
  status=${status:-0}
  elapsed=$(( $(date +%s) - start ))
  printf "\r\033[K"  # clear spinner line

  if [[ $status -eq 0 ]]; then
    echo "✓ $s OK  (duration: $(human "$elapsed"))"
    ((ok++))
  else
    echo "✗ $s FAILED  (duration: $(human "$elapsed"))"
    ((fail++))
  fi

  echo "Progress: $(bar "$idx" "$total")"
done

suite_elapsed=$(( $(date +%s) - suite_start ))
echo
echo "Summary: ${ok} OK, ${fail} failed  •  Total time: $(human "$suite_elapsed")"
exit 0
